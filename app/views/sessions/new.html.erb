<h1 class="text-center mt-4">Signin to BlogOnRails</h1>

<div class="container">
    <br>
    <div class="row justify-content-center mt-3">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "px-5 py-4 rounded", local: true) do |f| %>

                <div class="form-group row mb-5">
                    <%= f.label :email, class: "col-2 col-form-label" %>
                    <div class="col-10"> 
                        <%= f.text_field :email, class: "form-control rounded", placeholder: "Enter your email" %>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <%= f.label :password, class: "col-2 col-form-label" %>
                    <div class="col-10"> 
                        <%= f.text_field :password, class: "form-control rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.submit "Log in",  class: "btn btn-success" %>
                </div>
            <% end %>
            <div class="row px-5 mb-5">
            <%= link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-outline-danger" %>
            </div>
        </div>
    </div>
</div>