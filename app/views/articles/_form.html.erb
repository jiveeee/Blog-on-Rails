<div class="container">
    <br>
    <div class="row justify-content-center mt-3">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "px-5 py-4 rounded", local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10"> 
                        <%= f.text_area :description, rows: 10, class: "form-control rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.submit class: "btn btn-success" %>
                </div>
            <% end %>
            <div class="row px-5 mb-5">
            <%= link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-outline-danger" %>
            </div>
        </div>
    </div>
</div>