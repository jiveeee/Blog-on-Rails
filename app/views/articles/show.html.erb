<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10 mt-4">
            <div class="card text-center">
                <div class="card-header font-italic">
                    <%= @article.user.username %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= @article.title %></h5>
                    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                    <% if logged_in? && @article.user == current_user %>
                        <%= link_to 'Edit', edit_article_path(@article.id), class:"btn btn-outline-warning" %>
                        <%= link_to 'Delete', article_path(@article.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        Created <%= time_ago_in_words(@article.created_at) %> ago, 
                        Edited <%= time_ago_in_words(@article.updated_at) %> ago
                    </small>
                </div>
            </div>
            <div class="row px-2 my-5">
                <%= link_to 'Return to articles listing', articles_path, class: "btn btn-outline-dark" %>
            </div>
        </div>
    </div>
</div>
