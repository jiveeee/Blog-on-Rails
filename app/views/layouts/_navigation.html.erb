<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <%= link_to "Blog On Rails", root_path, class:"navbar-brand", id:"logo" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item active">
          <%= link_to "Articles", articles_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bloggers", users_path, class:"nav-link" %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "View profile", user_path(current_user), class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Edit account", edit_user_path(current_user), class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Delete account", user_path(current_user), class:"nav-link text-danger", method: :delete, data:{ confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      </form>
      <div class="d-flex">
        <% if logged_in? %>
          <%= link_to current_user.username, user_path(current_user), class:"nav-link" %>
          <%= link_to "Logout", logout_path, class:"btn btn-danger", method: :delete %>
        <% else %>
          <%= link_to "Log in", login_path, class:"btn btn-success me-2" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

