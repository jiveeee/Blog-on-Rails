<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
    <br>
    <div class="row justify-content-center mt-3">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "px-5 py-4 rounded", local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.submit class: "btn btn-success" %>
                </div>
            <% end %>
            <div class="row px-5 mb-5">
            <%= link_to 'Cancel and return to articles listing', articles_path, class: "btn btn-outline-danger" %>
            </div>
        </div>
    </div>
</div>